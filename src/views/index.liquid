{% layout './layouts/default-layout'
  , title: pages.home.title.rendered
  , current: "/" %}

{% block head %}
  <link rel="stylesheet" href="/styles/landmark_main-form.css">
{% endblock %}

{% block %}
  <main class="grid-container" id="main">
    <div class="main-content">
      <section class="section--content" style="--delay: 0.1s">
        <h1>{{ pages.home.title.rendered }}</h1>
      </section>
      <section class="section--content" style="--delay: 0.1s">
        {{ pages.home.content.rendered | extract: "wp-main" | sanitize }}
      </section>
    </div>
    <aside class="sidebar" style="--delay:.2s">
      {{ pages.home.content.rendered | extract: "wp-sidebar" | sanitize }}
    </aside>
  </main>
{% endblock %}